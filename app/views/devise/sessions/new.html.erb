  
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
      <%= f.email_field :email, :placeholder => "email", :id => 'email',:class => "form-control", :autofocus => true %>
        </div>
        <div class="form-group">
      <%= f.password_field :password, :placeholder => "password", :id => 'password',:class => "form-control"%>
        </div>
        <div class="form-group">
        <%= f.button :submit, "LOGIN", :id => "login-submit",:class => "btn btn-success" %>
        </div>
        <% end %>
         <%= link_to "Signup", new_user_registration_path %>
        
        
      